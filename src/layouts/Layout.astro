---
import Navigation from '../components/Navigation.astro'

interface Props {
  title: string
}

const { title = 'Astro default' } = Astro.props as Props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <div class="mt-[50px] max-w-[960px] m-auto">
      <slot />
    </div>
  </body>
</html>
